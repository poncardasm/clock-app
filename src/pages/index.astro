---
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      property="og:title"
      content="World Clock - Track Time Across the Globe"
    />
    <meta
      property="og:description"
      content="A sleek world clock application showing real-time updates for multiple time zones including UTC, Helsinki, Manila, San Francisco, Beijing, and The Hague."
    />
    <meta property="og:image" content="/assets/og-img.png" />
    <meta property="og:url" content="https://poncardas.com/clock" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="World Clock - Track Time Across the Globe"
    />
    <meta
      name="twitter:description"
      content="A sleek world clock application showing real-time updates for multiple time zones including UTC, Helsinki, Manila, San Francisco, Beijing, and The Hague."
    />
    <meta name="twitter:image" content="/assets/og-img.png" />
    <title>World Clock</title>
    <link rel="icon" href="/assets/favicon/favicon.ico" type="image/x-icon" />
    <link
      rel="shortcut icon"
      href="/assets/favicon/favicon.ico"
      type="image/x-icon"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/assets/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/assets/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/assets/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/assets/favicon/site.webmanifest" />
    <script is:inline>
      // Check for saved theme preference or default to light
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Google+Sans+Code:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:FILL,wght,GRAD,opsz@0..1,100..700,-50..200,20..48&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="min-h-screen flex items-start justify-center bg-background text-foreground transition-colors duration-300 py-8"
  >
    <div class="w-full max-w-7xl px-8 md:px-4">
      <div class="flex justify-center mb-8">
        <div class="flex gap-2">
          <div
            class="flex gap-2 bg-card dark:bg-card p-1 rounded-lg border border-border dark:border-border"
          >
            <button
              class="time-format-btn px-4 py-2 rounded-md text-secondary-foreground dark:text-secondary-foreground text-sm cursor-pointer transition-all duration-200 hover:text-foreground dark:hover:text-primary-foreground data-active:bg-secondary data-active:dark:bg-secondary data-active:font-bold"
              data-format="24"
              data-active>24H</button
            >
            <button
              class="time-format-btn px-4 py-2 rounded-md text-secondary-foreground dark:text-secondary-foreground text-sm cursor-pointer transition-all duration-200 hover:text-foreground dark:hover:text-primary-foreground data-active:bg-secondary data-active:dark:bg-secondary data-active:font-bold"
              data-format="12">12H</button
            >
          </div>
          <button
            id="theme-toggle"
            class="bg-card dark:bg-card p-2 rounded-lg border border-border dark:border-border text-secondary-foreground dark:text-secondary-foreground cursor-pointer transition-all duration-200 hover:text-foreground dark:hover:text-primary-foreground"
            aria-label="Toggle theme"
          >
            <span
              class="material-symbols-rounded dark:hidden text-[1.6rem] leading-none"
              aria-hidden="true"
            >
              light_mode
            </span>
            <span
              class="material-symbols-rounded hidden dark:block text-[1.6rem] leading-none"
              aria-hidden="true"
            >
              dark_mode
            </span>
          </button>
        </div>
      </div>
      <div class="max-w-[calc(3*280px+2*1.5rem+4rem)] mx-auto mb-6">
        <section
          class="bg-card dark:bg-card rounded-xl border border-border dark:border-border px-6 py-5 md:px-4 md:py-4"
          aria-labelledby="converter-title"
        >
          <h2
            id="converter-title"
            class="text-lg font-semibold text-card-foreground dark:text-card-foreground mb-4"
          >
            Time Zone Converter
          </h2>
          <p class="text-sm text-muted-foreground dark:text-muted-foreground">
            Click the city/country, time, or date in the source card to edit.
          </p>
          <section id="converter-result" class="mt-5 space-y-3">
            <div
              class="grid grid-cols-1 md:grid-cols-[1fr_auto_1fr] gap-3 items-center"
            >
              <article
                class="rounded-xl border border-border dark:border-border bg-muted/60 dark:bg-muted/50 px-5 py-4"
              >
                <select
                  id="converter-source-zone"
                  class="converter-zone-select text-3xl font-semibold text-card-foreground dark:text-card-foreground md:text-2xl"
                  aria-label="Source city and country"
                >
                </select>
                <p
                  id="converter-source-zone-name"
                  class="mt-1 text-xs font-mono text-muted-foreground dark:text-muted-foreground"
                >
                </p>
                <input
                  id="converter-source-time-input"
                  type="time"
                  step="60"
                  class="converter-input mt-3 text-6xl font-mono font-medium leading-none tracking-tight text-foreground dark:text-card-foreground md:text-5xl"
                  aria-label="Source time"
                />
                <div class="relative mt-3">
                  <button
                    id="converter-source-date-display"
                    type="button"
                    class="converter-input converter-date-display text-left text-base text-muted-foreground dark:text-muted-foreground md:text-sm"
                    aria-label="Edit source date"
                  >
                  </button>
                  <input
                    id="converter-source-date-input"
                    type="date"
                    class="converter-date-input-anchor"
                    aria-label="Source date"
                  />
                </div>
              </article>

              <button
                id="converter-swap"
                type="button"
                class="h-14 w-14 text-center cursor-pointer transition-all duration-200 hover:scale-105 focus:outline-none flex items-center justify-center"
                aria-label="Swap source and target countries"
                title="Swap source and target countries"
              >
                <span
                  class="material-symbols-rounded opacity-80 dark:opacity-90"
                  style="font-size:2.6rem;line-height:1;font-variation-settings:'FILL' 0,'wght' 500,'GRAD' 0,'opsz' 48;"
                  aria-hidden="true"
                >
                  sync_alt
                </span>
              </button>

              <article
                class="rounded-xl border border-border dark:border-border bg-muted/60 dark:bg-muted/50 px-5 py-4"
              >
                <select
                  id="converter-target-zone"
                  class="converter-zone-select text-3xl font-semibold text-card-foreground dark:text-card-foreground md:text-2xl"
                  aria-label="Target city and country"
                >
                </select>
                <p
                  id="converter-target-zone-name"
                  class="mt-1 text-xs font-mono text-muted-foreground dark:text-muted-foreground"
                >
                </p>
                <div class="mt-3 flex items-start gap-1">
                  <p
                    id="converter-target-time"
                    class="text-6xl font-mono font-medium leading-none tracking-tight text-foreground dark:text-card-foreground md:text-5xl"
                  >
                  </p>
                  <p
                    id="converter-target-period"
                    class="pt-1 text-xl font-semibold text-muted-foreground dark:text-muted-foreground md:text-lg"
                  >
                  </p>
                </div>
                <p
                  id="converter-target-date"
                  class="mt-3 text-base text-muted-foreground dark:text-muted-foreground md:text-sm"
                >
                </p>
              </article>
            </div>

            <p
              id="converter-relative"
              class="text-sm text-muted-foreground dark:text-muted-foreground"
            >
            </p>
            <p
              id="converter-hint"
              class="text-xs text-muted-foreground dark:text-muted-foreground"
            >
            </p>
          </section>
        </section>
      </div>
      <!-- Clock Cards Container -->
      <div
        id="clock-grid"
        class="grid grid-cols-[repeat(auto-fit,minmax(280px,1fr))] gap-6 max-w-[calc(3*280px+2*1.5rem+4rem)] mx-auto"
      >
